{
   "coverageDirectory": "./reports/tests/unit/coverage/",
   "name": "timeline",
   "roots": [
        "./src"
   ],
   "setupFiles": [
        "./enzyme.setup.js"
   ],
   "testMatch": [
        "**/*.spec.js?(x)"
   ],
   "verbose": true,

   "reporters": [
       "default",
       [
           "jest-stare",
           {
               "resultDir": "./reports/tests/unit"
           }
       ],
       [
           "jest-junit",
           {
                "outputDirectory": "./reports/tests/unit",
                "outputName": "xunit.xml"
           }
       ]
   ]
}
